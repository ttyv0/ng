<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :icon %><br>
    <div class="radio">
      <% @icons.each do |i| %>
        <label class="radio-inline">
          <%= f.radio_button :icon, i %>
          <span class="glyphicon glyphicon-<%= i %>"></span>
        </label>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
    <%= render 'comment_form' %>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary', data: { disable_with: 'Creating...' } %>
    <%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
  </div>
<% end %>
